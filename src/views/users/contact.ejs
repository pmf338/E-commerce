<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Contactanos</title>
</head>

<body id="contact-body">
    <header>
        <%- include('../partials/header.ejs') %>
    </header>

    <main>
        <!-- TITLE SECTION -->
        <div class="container mt-3 py-3 rounded-4" style="background-color: #23252B">
            <h1 class="display-3 text-center text-white my-5">CONTACTANOS</h1>
        </div>
        
        <div class="container mt-5">
            <div class="row">
                
                <!-- FORM SECTION -->
                <div class="col-lg-6 mb-4">
                    <div class="card h-100 text-white" style="background-color: #23252B">
                        <div class="card-body">
                            <h2 class="card-title fw-bold">Formulario de contacto</h2>
                            <form class="contact-form" action="#" method="post">
                                <div class="mb-3">
                                    <label for="contact-name" class="form-label fw-bold">Nombre</label>
                                    <input type="text" name="contact-name" id="contact-name" class="form-control"
                                        placeholder="Nombre" required>
                                </div>

                                <div class="mb-3">
                                    <label for="contact-email" class="form-label fw-bold">Email</label>
                                    <input type="email" name="contact-email" id="contact-email" class="form-control"
                                        placeholder="Email" required>
                                </div>

                                <div class="mb-3">
                                    <label for="contact-phone" class="form-label fw-bold">Número de celular</label>
                                    <input type="tel" name="contact-phone" id="contact-phone" class="form-control"
                                        placeholder="Número de celular" 
                                        maxlength="10" required>
                                </div>

                                <div class="mb-3">
                                    <label for="message" class="form-label fw-bold">Mensaje</label>
                                    <textarea id="message" name="message" class="form-control"
                                        placeholder="Envianos tu mensaje" rows="5"></textarea>
                                </div>

                                <div class="mb-3 text-center">
                                    <button id="contact-btn-send" type="button" class="btn btn-lg btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">ENVIAR</button>
                                </div>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <h2 class="modal-title fs-5 text-dark fw-bold" id="exampleModalLabel">Gracias por su mensaje</h2>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body text-dark">
                                        Le responderemos a la brevedad
                                        </div>
                                        <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                    </div>
                                </div>


                            </form>
                        </div>
                    </div>
                </div>

                <!-- DATA SECTION -->
                <div class="col-lg-6 mb-4">
                    <div class="card h-100 text-white" style="background-color: #23252B">
                        <div class="card-body">
                            <h2 class="card-title fw-bold text-center">Datos de contacto</h2>
                            <div class="contact-data pt-4">
                                <div class="contact-data-div mb-3">
                                    <div class="icon-box">
                                        <div class="inner">
                                            <i class="fa fa-map-marker"></i>
                                        </div>
                                    </div>
                                    <h4 class="contact-data-title fw-bold">Dirección</h4>
                                    <p class="contact-data-text">Calle Falsa 123<br>Bs. As. | Argentina</p>
                                </div>

                                <div class="contact-data-div mb-3">
                                    <div class="icon-box">
                                        <div class="inner">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                    </div>
                                    <h4 class="contact-data-title fw-bold">Teléfono</h4>
                                    <p class="contact-data-text">4678-5423</p>
                                </div>

                                <div class="contact-data-div mb-3">
                                    <div class="icon-box">
                                        <div class="inner">
                                            <i class="fa fa-envelope-o"></i>
                                        </div>
                                    </div>
                                    <h4 class="contact-data-title fw-bold">Email</h4>
                                    <p class="contact-data-text">info@rocketmusic.com</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer>
    </footer>
    <%- include('../partials/footer.ejs') %>
    <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Contactanos</title>
</head>

<body>
    <header>
        <%- include('../partials/header.ejs') %>
    </header>

    <main>
        <div class="container">

            <h1 class="my-4">Contactanos</h1>

            <div class="row">

                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title">Formulario de contacto</h2>
                            <form class="contact-form" action="#" method="post">
                                <div class="mb-3">
                                    <label for="contact-name" class="form-label">Nombre</label>
                                    <input type="text" name="contact-name" id="contact-name" class="form-control"
                                        placeholder="Nombre" required>
                                </div>

                                <div class="mb-3">
                                    <label for="contact-email" class="form-label">Email</label>
                                    <input type="email" name="contact-email" id="contact-email" class="form-control"
                                        placeholder="Email" required>
                                </div>

                                <div class="mb-3">
                                    <label for="contact-phone" class="form-label">Número de celular</label>
                                    <input type="tel" name="contact-phone" id="contact-phone" class="form-control"
                                        placeholder="Número de celular" pattern="[0-9]{2}-[0-9]{4}-[0-9]{4}"
                                        maxlength="10" required>
                                </div>

                                <div class="mb-3">
                                    <label for="message" class="form-label">Mensaje</label>
                                    <textarea id="message" name="message" class="form-control"
                                        placeholder="Envianos tu mensaje" rows="5"></textarea>
                                </div>

                                <div class="mb-3">
                                    <button type="submit" class="btn btn-primary">Enviar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title">Datos de contacto</h2>
                            <div class="contact-data">
                                <div class="contact-data-div mb-3">
                                    <div class="icon-box">
                                        <div class="inner">
                                            <i class="fa fa-map-marker"></i>
                                        </div>
                                    </div>
                                    <h4 class="contact-data-title">Dirección</h4>
                                    <p class="contact-data-text">Calle Falsa 123<br>Bs. As. | Argentina</p>
                                </div>

                                <div class="contact-data-div mb-3">
                                    <div class="icon-box">
                                        <div class="inner">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                    </div>
                                    <h4 class="contact-data-title">Teléfono</h4>
                                    <p class="contact-data-text">######</p>
                                </div>

                                <div class="contact-data-div mb-3">
                                    <div class="icon-box">
                                        <div class="inner">
                                            <i class="fa fa-envelope-o"></i>
                                        </div>
                                    </div>
                                    <h4 class="contact-data-title">Email</h4>
                                    <p class="contact-data-text">info@rocketmusic.com</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </main>

    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</body>

</html>
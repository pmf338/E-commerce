<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <header>
        <%- include('../partials/header.ejs') %>
    </header>
    <main>
        <h1 class="text-center display-2 pt-4">TIENDA</h1>
        <h2 class="text-center pb-4">Todos los productos de tus artistas preferidos</h2>

        <!-- Filters -->
        <div style="background-color: lightblue; height: 10vh;">FILTER ZONE - PENDING</div>

        <!-- List of Products -->
        <div class="row row-cols-1 row-cols-md-3 g-4 mx-auto my-5">
            <% productsList.forEach(product => { %>
            <div class="col">
                <div class="card h-100 shop-products-card">
                    <img src="/images/products/<%- product.imagePrimary %>"
                        class="card-img-top shop-card-img border-1 border" alt="...">
                    <div class="card-body">
                        <a href="/productdetail/<%- product.id %>">
                            <h5 class="card-title text-center fs-4 mb-4"><%- product.name %></h5>
                        </a>
                        <div class="position-relative fs-5 pb-4">
                            <span class="card-text position-absolute top-50 start-0 translate-middle-y">$
                                <%- product.price %></span>
                            <span class="position-absolute top-50 end-0 translate-middle-y">
                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                                    class="bi bi-cart-plus" viewBox="0 0 16 16">
                                    <path
                                        d="M9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9V5.5z" />
                                    <path
                                        d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                                </svg>
                            </span>
                        </div>
                    </div>
                    <div class="card-footer shop-products-card-footer">
                        <p class="fs-6 text-center mb-0">AGREGADO</p>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <% if (locals.usuario) { %>
        <% if (locals.usuario.roles_id == 1) { %>
        <a href="/createProduct" class="shop-btn-flotante btn-secondary border-success">Agregar Producto</a>
        <% } %>
        <% } %>
    </main>
    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
</body>

</html>
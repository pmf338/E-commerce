<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head.ejs') %>
  <title><%= title %></title>
</head>

<body>
  <header>
    <%- include('../partials/header.ejs') %>
  </header>
  <main>
    <form class="form-create-product" method="post" action="/editProduct/<%= product.id %>?_method=PUT" enctype="multipart/form-data">
      <section style="min-height: 100vh;">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-9 mb-4 mb-lg-0">
              <div class="card mb-3" style="border-radius: .5rem;">
                </br>
                <div class="row g-0">
                  <h3 class="display-6 card-title text-center text-gray">EDITAR PRODUCTO</h3>
                  
                  <!-- LEFT SECTION -->
                  <div class="col-md-4 gradient-custom text-center text-gray" style="border-top-left-radius: .5rem;border-bottom-left-radius: .5rem;">
                      </br></br>
                      
                      <!-- CAROUSEL IMGS -->
                      <div class="form-group input-field-register row">
                        <label for="user_image" class="text-center text-gray fs-5 mt-3">Imagenes del producto</label>               
                        <div id="carouselExampleIndicators" class="carousel slide p-3" data-bs-ride="true">
                          <div class="carousel-indicators ">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                          </div>
                          <div class="carousel-inner">
                            <div class="carousel-item active">
                              <% if (product.dataValues.imageSecond != null) { %>
                              <img src="../../images/products/<%= product.dataValues.imagePrimary %>" class="d-block w-100" alt="Avatar"/>
                              <% } else { %>
                              <img src="../../images/products/avatar.jpeg" alt="Avatar" class="d-block w-100"/>
                              <% } %>
                            </div>
                            <div class="carousel-item">
                              <% if (product.dataValues.imageSecond != null) { %>
                              <img src="../../images/products/<%= product.dataValues.imageSecond %>" class="d-block w-100" alt="Avatar" />
                              <% } else { %>
                              <img src="../../images/products/avatar.jpeg" class="d-block w-100"/>
                              <% } %>
                            </div>
                            <div class="carousel-item">
                              <% if (product.dataValues.imageThird != null) { %>
                              <img src="../../images/products/<%= product.dataValues.imageThird %>" class="d-block w-100" />
                              <% } else { %>
                              <img src="../../images/products/avatar.jpeg" class="d-block w-100" />
                              <% } %>
                            </div>
                          </div>
                          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                          </button>
                          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                          </button>
                        </div>


                        <div class="d-flex justify-content-center">
                          <div class="btn btn-light btn-rounded mb-3" style="padding: 5px">
                            <label class="form-label text-black m-1" for="customFile1">Seleccionar nuevas
                              imagenes</label>
                            <input type="file" class="form-control" id="product_image" name="product_image"
                              accept=".jpg, .png, .jpeg" />
                          </div>
                        </div>

                      </div>
                  
                  </div>

                  <!-- PRODUCTS DETAILS -->
                  <div class="col-md-8">
                      <div class="card-body p-4 container">
                        <h6 class="text-center fs-5">Detalles Producto</h6>
                        <hr class="mt-0 mb-4">
                        <div class="row pt-1">
                          <div class="form-floating mb-3 col">
                              <input type="number" name="product_sku" id="product_sku" class="form-control" value="<%- product.sku %>">
                              <label for="product_sku">SKU</label>
                          </div>
                          <div class="form-floating mb-3 col">
                              <input type="text" name="product_name" id="product_name" class="form-control" value="<%- product.name %>">
                              <label for="product_name">NOMBRE</label>
                          </div>
                        </div>
                        <div class="row pt-1">
                          <div class="form-floating mb-3 col">
                            <input type="number" name="product_price" id="product_price" class="form-control" minlength="1" required value="<%- product.price %>">
                            <label for="product_price">PRECIO UNITARIO</label>
                          </div>
                          <div class="form-floating mb-3 col">
                            <input type="number" name="product_quantity" id="product_quantity" class="form-control" minlength="1" required value="<%- product.quantity %>">
                            <label for="product_quantity">CANTIDAD STOCK</label>
                          </div>
                        </div>
                        <div class="row pt-1">
                          <div class="form-floating mb-3 col">
                            <select class="form-select" name="product_artist" id="product_artist" aria-label="Default select example">
                              <option selected value="<%- productArtist.id %>"><%- productArtist.name %></option>
                              <% artistList.forEach(artist => { %>
                                <% if (productArtist.id !== artist.id){ %>
                                <option value="<%- artist.id %>"><%- artist.name %></option>
                                <% }; %>
                              <% }); %>
                            </select>
                            <label for="product_artist">ARTISTA</label>
                          </div>
                          <div class="form-floating mb-3 col">
                            <select class="form-select" name="product_category" id="product_category" aria-label="Default select example">
                              <option selected value="<%- productCategory.id %>"><%- productCategory.description %></option>
                              <% categoriesList.forEach(category => { %>
                                <% if (productCategory.id !== category.id){ %>
                                  <option value="<%- category.id %>"><%- category.description %></option>
                                <% }; %>
                              <% }); %>
                            </select>
                            <label for="product_category">CATEGORIA</label>
                          </div>
                        </div>
                        <div class="row pt-1">
                          <div class="form-floating mb-3 col">
                            <input type="text" name="product_size" id="product_size" class="form-control" value="<%- product.size %>">
                            <label for="product_size">TALLE</label>
                          </div>
                          <div class="form-floating mb-3 col">
                            <input type="text" name="product_format" id="product_format" class="form-control" value="<%- product.size %>">
                            <label for="product_format">FORMATO</label>
                          </div>
                        </div>
                        <div class="row pt-1">
                          <div class="form-floating mb-3 col">
                            <input type="text" name="product_color" id="product_color" class="form-control" value="<%- product.color %>">
                            <label for="product_color">COLOR</label>
                          </div>
                          <div class="form-floating m-auto col">
                            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                              <input type="radio" class="btn-check" name="product_is_active" id="btnradio1" autocomplete="off" checked>
                              <label class="btn btn-outline-dark" for="btnradio1">ACTIVO</label>
                            
                              <input type="radio" class="btn-check" name="product_is_active" id="btnradio2" autocomplete="off">
                              <label class="btn btn-outline-dark" for="btnradio2">NO ACTIVO</label>
                            </div>
                          </div>
                        </div>
                        <div class="row pt-1">
                          <div class="form-floating mb-3 col">
                            <textarea class="form-control" name="product_description" id="product_description" rows="3"
                              required value="<%- product.description %>">Escriba la descripcion del producto aquí</textarea>
                            <label for="product_description">DESCRIPCION</label>
                          </div>
                        </div>
                      </div>
                  </div>

                  <!-- BUTTONS SECTION -->
                  <br><br><br>
                  <div class="container text-center py-3 bg-dark rounded">
                        <div class="row gx-5">
                          <div class="col">
                            <button type="submit" class="btn btn-primary"> GUARDAR</button>
                          </div>
                          <div class="col">
                            <button type="submit" class="btn btn-danger">ELIMINAR</button>
                          </div>
                          <div class="col">
                            <a href="/productDetail/<%= product.id %>">
                              <button type="button" class="btn btn-secondary">CANCELAR</button>
                            </a>
                          </div>
                        </div>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>  
      </section>
    </form>
  </main>
  <footer>
    <%- include('../partials/footer.ejs') %>
  </footer>
  <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>